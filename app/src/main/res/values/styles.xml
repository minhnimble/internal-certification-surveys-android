<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default text style for TextView, please adjust for your own specific usage -->
        <item name="android:textViewStyle">@style/Widget.Template.TextView</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:background">@drawable/bg_user_login_input</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

</resources>
