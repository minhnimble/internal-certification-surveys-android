<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default text style for TextView, please adjust for your own specific usage -->
        <item name="android:textViewStyle">@style/Widget.Template.TextView</item>
        <!-- `android:windowTranslucentStatus` makes the system status bar translucent.
            When it is specified the root layout should include android:fitsSystemWindows="true". -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:background">@drawable/bg_sign_in_user_input</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white_30a</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SurveyQuestionsEditTextStyle">
        <item name="android:background">@drawable/bg_survey_questions_edittext_input</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white_70a</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">@dimen/_15ssp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">@dimen/_35sdp</item><!-- menu item height-->
    </style>

</resources>
