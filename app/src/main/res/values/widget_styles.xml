<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.Button.General">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="Widget.Template.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/dimen_normal_display_text</item>
    </style>

    <style name="Widget.Template.TextView.Bold">
        <item name="android:textColor">@color/light_blue_90a</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="Widget.Template.TextView.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Template.TextView.Description">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white_70a</item>
    </style>

    <style name="Widget.Template.TextView.Header">
        <item name="android:textSize">@dimen/_21ssp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="Widget.Template.TextView.MenuItem">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Widget.Template.TextView.MenuItemBold">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/circularstd_bold</item>
    </style>

    <style name="heartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rb_general_heart</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:maxHeight">@dimen/_37sdp</item>
    </style>

    <style name="smileyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rb_general_smiley</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:maxHeight">@dimen/_37sdp</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rb_general_star</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:maxHeight">@dimen/_37sdp</item>
    </style>

</resources>
